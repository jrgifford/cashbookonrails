<div id="primarycontent">

	<!-- primary content start -->

	<div class="post">
		<div class="header">
			<h3>Editing bill</h3>
		</div>
		<div class="content">

			<%= error_messages_for :bill %>
			
			<% form_for(@bill) do |f| %>
			  <p>
			    <b>Payee</b><br />
			    <%= f.select :payee_id, @payees %>
			  </p>
			
			  <p>
			    <b>Account</b><br />
			    <%= f.select :account_id, @accounts %>
			  </p>
			
			  <p>
			    <b>Number</b><br />
			    <%= f.text_field :number %>
			  </p>
			
			  <p>
			    <b>Next payment date</b><br />
			    <%= f.date_select :next_payment_date %>
			  </p>
			
			  <p>
			    <b>Payment method</b><br />
			    <%= f.select :payment_method, Bill::PAYMENT_METHODS %>
			  </p>
			
			  <p>
			    <b>Frequency</b><br />
			    <%= f.select :frequency, Bill::FREQUENCY %>
			  </p>
			
			  <p>
			    <b>Amount</b><br />
			    <%= f.text_field :amount %>
			  </p>
			
			  <p>
			    <b>Category</b><br />
			    <%= f.select :category_id, @categories %>
			  </p>
			
			  <p>
			    <b>Paid</b><br />
			    <%= f.check_box :paid %>
			  </p>
			
			  <p>
			    <%= f.submit "Update" %>
			  </p>
			<% end %>
			
			<%= link_to 'Show', @bill %> |
			<%= link_to 'Back', bills_path %>
			
			<br />
			<br />
		</div>			
		<div class="footer">
		</div>
	</div>

	<!-- primary content end -->

</div>