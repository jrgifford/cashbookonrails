		<div id="primarycontent">
		
			<!-- primary content start -->
		
			<div class="post">
				<div class="header">
					<h3>Preview - Spending by category</h3>
				</div>
				<div class="content">	
					<% for category in @categories %>
						<p><h3><%= category.name %></h3></p>
						<table cellspacing="10">
							<tr>
								<th>Number</th>
								<th>Account</th>
								<th>Payee</th>
								<th>Payment method</th>								
								<th>Amount</th>
							</tr>
						<% for bill in category.bills %>
							<tr>
								<td><%= bill.number %></td>
								<td><%= bill.account %></td>
								<td><%= bill.payee %></td>
								<td><%= bill.payment_method %></td>
								<td align="right"><%= number_to_currency(bill.amount) %></td>
							</tr>
						<% end %>
							<tr>
								<td></td>
								<td></td>
								<td></td>
								<td align="right">Total - </td>								
								<td>$999.00</td>
							</tr>
						</table>
					<% end %>				
					</br>
				</div>			
				<div class="footer">
					<ul>
						<li class="printerfriendly"><a href="#">Printer Friendly</a></li>
					</ul>
				</div>
			</div>
		
			<!-- primary content end -->
	
		</div>
		
